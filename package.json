{
  "name": "prokoleso-health-check",
  "version": "1.0.0",
  "description": "Автоматизированная проверка работоспособности сайта prokoleso.ua с помощью Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --config=playwright.config.optimized.ts",
    "test:health": "playwright test tests/prokoleso-health-check-optimized.spec.ts --config=playwright.config.optimized.ts",
    "test:fast": "playwright test tests/prokoleso-health-check-fast.spec.ts --config=playwright.config.optimized.ts",
    "test:specific": "playwright test tests/prokoleso-specific.spec.ts --config=playwright.config.optimized.ts",
    "test:all": "playwright test --config=playwright.config.optimized.ts",
    "test:ui": "playwright test --ui --config=playwright.config.optimized.ts",
    "test:headed": "playwright test --headed --config=playwright.config.optimized.ts",
    "test:debug": "playwright test --debug --config=playwright.config.optimized.ts",
    "test:chrome": "playwright test --project=chromium --config=playwright.config.optimized.ts",
    "test:firefox": "playwright test --project=firefox --config=playwright.config.optimized.ts",
    "test:mobile": "playwright test --project='Mobile Chrome' --config=playwright.config.optimized.ts",
    "test:tablet": "playwright test --project=Tablet --config=playwright.config.optimized.ts",
    "test:working": "playwright test --project=chromium --project=firefox --project='Mobile Chrome' --project=Tablet --config=playwright.config.optimized.ts",
    "test:report": "playwright show-report",
    "test:report:open": "playwright show-report --host 0.0.0.0",
    "install-browsers": "playwright install",
    "install-deps": "playwright install-deps",
    "monitor": "node scripts/monitor.js",
    "monitor:continuous": "node scripts/monitor-continuous.js",
    "setup": "npm install && playwright install",
    "setup:optimized": "npm install && playwright install && npm run test:fast",
    "clean": "rm -rf reports/ test-results/ logs/",
    "lint": "eslint tests/ scripts/",
    "lint:fix": "eslint tests/ scripts/ --fix"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "health-check",
    "prokoleso",
    "e2e",
    "monitoring"
  ],
  "author": "Prokoleso Health Check Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "nodemailer": "^6.9.0",
    "axios": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prokoleso/health-check.git"
  },
  "bugs": {
    "url": "https://github.com/prokoleso/health-check/issues"
  },
  "homepage": "https://github.com/prokoleso/health-check#readme"
}